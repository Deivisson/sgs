<%= content_tag :div, class:'sortable-solicitacoes-container' do%>
	<%= content_tag :div, class:'content-bar-title' do %>
		"Lista de Solicitações"
	<% end %>
	<ul id="planejamento-solicitacoes-container" class="connectedSortable">
		<% @solicitacoes.each do |solicitacao|%>
			<li controle=<%=solicitacao.controle %> 
					prioridade=<%=solicitacao.prioridade.id %>
					href=<%= new_usuario_tarefa_path(solicitacao_id:solicitacao.id) %>>
				<%= "#{solicitacao.controle}" %>
			</li>
		<% end %>	
	</ul>
<% end %>

<%= content_tag :div, class:'sortable-usuarios-container' do %>
	<%= content_tag :div, class:'content-bar-title' do %>
		Programadores x Tarefas
	<% end %>
	<ul class="usuario-tarefas-container">
		<% @usuarios.each do |usuario|%>
			<li>
				<%=content_tag :label, usuario.nome %>
				<ul id="planejamento-usuarios-container-#{usuario.id}" 
						class="connectedSortable" controle=<%= usuario.id %>>
						<% usuario.tarefas.each do |tarefa| %>
							<li><%= tarefa.solicitacao.controle %></li>
						<% end %>
				</ul>
			</li>
		<% end %>	
	</ul>
<% end %>	