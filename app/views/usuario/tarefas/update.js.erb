<% if @tarefa.errors.any? %>
  $('#task-dialog-form').html('<%= escape_javascript(render('form')) %>');
  $("#nivel-complexidade-id").focus();
  setMaskFields();
<% else %>
  $('#solicitacao-tarefas-container').html('<%= escape_javascript(render('tarefas'))%>');
  $('#show-fields').html('<%= escape_javascript(render('show_fields'))%>');
  sortEvents();
  callShowModalForm();
  $('#task-dialog-form').dialog('close');
  $('#task-dialog-form').remove();
  alert("Tarefa atualizada com sucesso!");
<% end %>

