<%= semantic_form_for [:usuario,@solicitacao_historico], remote:true do |form| %>
  <%= form.inputs do %>
    <%= form.input :detalhe, :input_html => {:rows => 12} %>
    <%= form.input :usuario_id, :as => :hidden %>
    <%= form.input :solicitacao_id, :as => :hidden %>
  <% end %>
  <%= form.actions :class => "buttons-container modal-form-button" do %>
    <%= submit_button form %>
    <%= link_to_cancel "#", id:'solicitacao-hist-cancel-link' %>
  <% end -%>
 <% end %>
