<table  border="0" cellpadding="0" cellspacing="1">
  <thead>
    <tr>
      <th width="300">Categoria</th>
      <th>Nome</th>
      <th width="100">Telefone</th>
      <th width="100">Fax</th>
      <th width="10">Edit</th>
      <th width="10">Del</th>
    </tr>
  </thead>
    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.categoria.descricao unless cliente.categoria.nil? %></td>
          <td><%=link_to cliente.nome,[:usuario, cliente],class:'inline-link' %></td>
          <td><%= cliente.telefone %></td>
          <td><%= cliente.fax %></td>
          <td><%= link_to image_tag(image_link[:edit]), 
                          edit_usuario_cliente_path(cliente) %></td>
          <td><%= link_to image_tag(image_link[:del]), 
                          [:usuario,cliente], 
                          :confirm => 'Confirma ExclusÃ£o?', :method => :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate @clientes, :id => 'paginate' %>