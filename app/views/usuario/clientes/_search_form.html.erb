    <div style="width: 310px; float:left">
	    <%= text_field_tag "conteudo_busca_cliente",@conteudo_busca_cliente || "",
	        {:class => "header-search-field",
	         :placeholder => "Pesquisar Clientes",
	         :autofocus   => true } %>

	    <%= submit_tag "", :class => "search-buttom" %>
	    <label style="margin-left:2px;">
	    	Digite o Nome, Apelido ou CNPJ(apenas n√∫meros) 
	    </label>
    </div>
    
  <% end %>
<% end %>