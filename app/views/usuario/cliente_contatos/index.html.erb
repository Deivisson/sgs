<% title "Listagem de Contatos" %>
<table border="0" cellpadding="0" cellspacing="1" >
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Departamento</th>
      <th width = "120">Telefone</th>
      <th width = "120">Celular</th>
      <th width="10">Det</th>
      <th width="10">Edit</th>
      <th width="10">Del</th>
    </tr>
  </thead>
  <tbody>
    <% for cliente_contato in @cliente_contatos %>
      <tr>
        <td width ="230"><%=h cliente_contato.cliente_nome %></td>
        <td><%=h cliente_contato.nome %></td>
        <td><%=h cliente_contato.email %></td>
        <td><%=h cliente_contato.departamento %></td>
        <td><%=h cliente_contato.telefone %></td>
        <td><%=h cliente_contato.celular %></td>
        <td><%= link_to image_tag(image_link[:show]), [:usuario, cliente_contato] %></td>
        <td><%= link_to image_tag(image_link[:edit]), 
                    edit_usuario_cliente_contato_path(cliente_contato) %></td>
        <td><%= link_to image_tag(image_link[:del]), 
              [:usuario,cliente_contato], :confirm => 'Confirma ExclusÃ£o ?',
                                      :method => :delete %></td>
      </tr>
    <% end %>
   </tbody> 
</table>
