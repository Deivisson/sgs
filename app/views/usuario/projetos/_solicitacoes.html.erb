<%= link_to "Adicionar Tarefa",
        new_usuario_projeto_solicitacao_path(projeto_id:@projeto.id,etapa_id:etapa_id), 
        remote:true,
        id:'solicitacao-link',
        class:'button-add-new add-on-index-top' %>
<br>
<table>
  <thead>
    <tr>
      <th width = "70">Nº Solic.</th>
      <th>Cliente</th>
      <th>Título</th>
      <th>Sub Módulo</th>
      <th>Responsável</th>
      <th width = "70">Prioridade</th>
      <th width ="120">Tipo</th>
      <th>Status</th>
      <th span='3' width = "80" style="border-left:0px;"></th>
    </tr>
  </thead>
  <tbody id=<%= "projeto-solicitacoes-#{etapa}" %>>
    <%- solicitacoes.each do |solicitacao| %>
      <%= render partial:'solicitacao_item', locals: {solicitacao:solicitacao} %>
    <% end %>
  </tbody>
</table>
