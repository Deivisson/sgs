<div id="modal-container">
  <%= semantic_form_for [:usuario, @projeto], remote:true do |f| %>
    <%= f.inputs do %>
      <%= section_tag do %>
        <%= f.input :cliente_id, 
                    :as         => :select, 
                    :required   => true,
                    :collection => @clientes.collect{|c| [c.nome, c.id]},
                    :input_html => {:id => "cliente-select-id"}  %>

        <%= f.input :nome, :label => "Nome Projeto" %>
        <%= f.input :descricao, 
                    :label       => "Descrição",
                    :input_html => {:rows => 10 }%>
        
        <%= f.input :data_inicio, 
                    :as         => :string, 
                    :label      => "Data Início",
                    :input_html => {:style => "max-width: 150px !important;"} %>

        <%= f.input :data_prevista_termino, 
                    :as         => :string, 
                    :label      => "Data Prevista Término",
                    :input_html => {:size => 40} %>
        

        <fieldset class="choices">
            <ol class="choices-group">
                <%- @etapas.each do |etapa| %>
                  <li class="choice">
                    <%= content_tag :label, for:"projeto_etapa_ids_1#{etapa.id}" do %>
                      <%= etapa.descricao %>
                      <%= check_box_tag "projeto[etapa_ids][]",etapa.id,id:"projeto_etapa_ids_#{etapa.id}" %>
                    <% end %>
                  </li>
                <% end %>
            </o>
        </fieldset>
        
        <%= f.input :etapas, 
                    as: :check_boxes,
                    :collection => @etapas.collect{|e| [e.descricao,e.id]} %>

      <% end %>
    <% end %>
    <%= f.actions :class => "buttons-container modal-form-button" do %>
      <%= submit_button f %>
      <%= link_to_cancel "#", id:'projeto-cancel-link' %>
    <% end -%>
  <% end %>
</div>