<% title 'Tarefas' %>
<% content_for :left_container do %>
  <%= render "projeto_resumo_detalhes" %>
  <%= content_tag :div, class:"menutab-mini-content", style:"margin-top: 10px;" do %>
 		<div id="tab-resumo-projeto" >
      <%= content_tag :ul do %>
        <li id = "projeto-tab1">
          <%= link_to "#fragment-1" do  %>
            <span>Progresso</span>
          <% end %>
        </li>
        <li id = "projeto-tab2" >
          <%= link_to "#fragment-2" do  %>
            <span>Participantes</span>
          <% end %>
        </li>
      <% end %>
      <%= render "projeto_resumo_progresso"  %>
      <%= render "projeto_resumo_participantes" %>
    </div>
  <% end %>
<% end %>


<% content_for :menu do %>
  <%= content_tag :div, class:"projeto-menu-container" do %>
    <div id="tab-menu-projeto" >
      <%= content_tag :ul do %>
      	
        <%= content_tag :li, :id => "projeto-menu-tab1" do %>
          <%= link_to "Desenvolvimento", "#projeto-menu-aba1" %>
        <% end  if @projeto.possui_desenvolvimento? %>
        
        <%= content_tag :li, :id => "projeto-menu-tab2" do %>
          <%= link_to "Instalação", "#projeto-menu-aba2" %>
        <% end if @projeto.possui_instalacao? %>

      	<%= content_tag :li, :id => "projeto-menu-tab3" do %>
          <%= link_to "Treinamento", "#projeto-menu-aba3" %>
        <% end if @projeto.possui_treinamento? %>

      <% end %>
      <%= render 'etapa_desenvolvimento' if @projeto.possui_desenvolvimento? %>
      <%= render 'etapa_instalacao' if @projeto.possui_instalacao? %>
    </div>
  <% end %>
<% end %>



