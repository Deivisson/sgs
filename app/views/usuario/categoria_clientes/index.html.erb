<% title "Categorias de Clientes" %>
<%= content_for :bar do %>
  <%= link_to "Nova Categoria", 
              new_usuario_categoria_cliente_path, 
              class:"button-add-new add-on-index-top-with-header" %>
<% end %>

<table  border="0" cellpadding="0" cellspacing="1">
  <thead>
    <tr>
      <th>Descrição</th>
      <th width="10">Edit</th>
      <th width="10">Del</th>
    </tr>
  </thead>
    <tbody>
      <% @categoria_clientes.each do |categoria_cliente| %>
        <tr>
          <td>
            <%=link_to categoria_cliente.descricao,[:usuario, categoria_cliente],class:'inline-link' %>
          </td>
          <td>
            <%= link_to image_tag(image_link[:edit]), 
                        edit_usuario_categoria_cliente_path(categoria_cliente) %>
          </td>
          <td>
            <%= link_to image_tag(image_link[:del]), [:usuario,categoria_cliente], 
                    :confirm => 'Confirma Exclusão?', :method => :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
