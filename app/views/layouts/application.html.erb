<!DOCTYPE html>
<head>
  <META HTTP-EQUIV="Content-Type" CONTENT="text/html; charset=utf-8">
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application', :media => "all" %>
  
  <%= yield(:tiny_mce) %>  
  <%= csrf_meta_tag %>
</head>
<body>
  <%= render "/shared/header" %>
  <div class = "left">
    <ul class="menu-icon-bar">
        <li> <%= link_to image_tag("/assets/icons/32/tasks.png"), usuario_solicitacoes_path %></li>
        <li> <%= link_to image_tag("/assets/icons/32/project.png"),usuario_projetos_path %> </li>
        <li> <%= link_to image_tag("/assets/icons/32/services.png"), usuario_ordem_servicos_path %> </li>
        <li> <%= link_to image_tag("/assets/icons/32/callcenter.png"),"#" %> </li>
    </ul>
    <ul class="left-col-container">
      <%= yield :left_container %>
    </ul>
  </div>

  <div id="toolbar" >
    <%- if show_title? -%>
      <h1 class="title" id="content-title" ><%=h yield(:title) %></h1>
    <%- end -%>
    <%= yield :bar %>
  </div>

  <div class="content">
    <div id="container" >
      <%- flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end %>
    </div>
    <%= yield %>
  </div>

 </body>
</html>
