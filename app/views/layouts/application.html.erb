<!DOCTYPE html>
<head>
  <META HTTP-EQUIV="Content-Type" CONTENT="text/html; charset=utf-8">
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application', :media => "all" %>
  <%= javascript_include_tag  "//tinymce.cachefly.net/4.0/tinymce.min.js" %>
  <%= yield(:tiny_mce) %>  
  <%= csrf_meta_tag %>
</head>
<body>
  <%= render "/shared/header" %>
  <div class = "left">
    <ul class="menu-icon-bar">
        <%= main_menu(usuario_solicitacoes_path, 
                      icon_name:"tasks",
                      target:'solicitacao',
                      title:'Solicitações') %>
        <%= main_menu(usuario_projetos_path, 
                      icon_name:"project",
                      target:'projeto',
                      title:'Projetos') %>

        <%= main_menu(usuario_tarefas_path(from:'list'), 
                      icon_name:"planning",
                      target:'tarefas',
                      title:'Cronograma do Desenvolvimento') %>

        <%= main_menu(usuario_ordem_servicos_path, 
                      icon_name:"services",
                      target:'ordem_servico',
                      title:'Ordens de Serviços') %>

        <%= main_menu(usuario_ordem_servicos_path, 
                      icon_name:"callcenter",
                      target:'atendimento',
                      title:'Em Breve :-)!!') %>
    </ul>
    <ul class="left-col-container">
      <%= yield :left_container %>
    </ul>
  </div>

  <div id="toolbar" >
    <%- if show_title? -%>
      <h1 class="title" id="content-title" ><%=h yield(:title) %></h1>
    <%- end -%>
    <%= yield :bar %>
  </div>

  <div class="content">
    <div id="container" >
      <%- flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end %>
    </div>
    <%= yield %>
  </div>

 </body>
</html>
