<% title "Listagem Itens de Checklist" %>
<table border="0" cellpadding="0" cellspacing="1"  >
  <thead>
    <tr>
      <th>Descrição</th>
      <th width="10">Edit</th>
      <th width="10">Del</th>
    </tr>
  </thead>
  <tbody>
    <% @check_list_itens.each do |check_list_item| %>
      <tr>
        <td><%=link_to check_list_item.descricao,
                       admin_check_list_item_path(check_list_item), 
                       class:'inline-link'%></td>
        <td><%= link_to image_tag(image_link[:edit]), edit_admin_check_list_item_path(check_list_item)  %></td>
        <td><%= link_to image_tag(image_link[:del]), [:admin,check_list_item], 
                  :confirm => 'Confirma exclusão?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Adicionar Item de Check List', new_admin_check_list_item_path %>
