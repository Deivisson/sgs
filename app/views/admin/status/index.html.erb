<% title "Listagem Status" %>
<table border="0" cellpadding="0" cellspacing="1"  >
  <thead>
    <tr>
      <th>Descrição</th>
      <th width="10">Det</th>
      <th width="10">Edit</th>
      <th width="10">Del</th>
    </tr>
  </thead>
  <tbody>
    <% for status in @status %>
      <tr>
        <td><%=h status.descricao %></td>
        <td><%= link_to image_tag(image_link[:show]),admin_status_path(status.id) %></td>
        <td><%= link_to image_tag(image_link[:edit]), edit_admin_status_path(status)  %></td>
        <td><%= link_to image_tag(image_link[:del]), [:admin,status], 
                  :confirm => 'Confirma exclusão?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><a href="/admin/status/new">Novo Status</a> </p>
