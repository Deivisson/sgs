<br>
<table border="0" cellpadding="0" cellspacing="1"  >
  <caption>Configuração do Tempo para Evolução do Status</caption>
  <thead>
    <tr>
      <th>Tipo Pendência</th>
      <th>Prioridade</th>
      <th>Tempo(Hrs)</th>
      <th width="10">Edit</th>
      <th width="10">Del</th>
    </tr>
  </thead>
  <tbody>
    <% e = nil %>
    <% @tempo_evolucoes.each do |evolucao|  %>
      <tr>
        <% show_label = ( e == nil || e.tipo_pendencia_id != evolucao.tipo_pendencia_id)  %>
        <td <%= show_label && e != nil ? "style='border-top:1px solid #D6D6D6;border-bottom:0px'".html_safe : "style='border-bottom:0px solid #D6D6D6'".html_safe    %>>
          <% if show_label %>
            <%= evolucao.tipo_pendencia.descricao  %>
          <% end %>
        </td>
        <td><%= evolucao.prioridade.descricao %></td>
        <td><%= evolucao.tempo_horas %></td>
        <td>
          <%= link_to image_tag(image_link[:edit]),
                    [:edit,:admin,@status,evolucao],
                    remote:true,
                    class:'status-tempo-link'%>
        </td>
        <td><%= link_to image_tag(image_link[:del]),[:admin,@status,evolucao], 
                  :confirm => 'Confirma exclusão?', :method => :delete %></td>        
      </tr>
      <% e = evolucao %>
    <% end %>
  </tbody>
</table>
