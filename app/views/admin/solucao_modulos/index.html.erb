<% title "Listagem dos Módulos" %>

<table border ="0" cellspacing ="1" cellpadding = "0" >
  <thead>
    <tr>
      <th width ="200">Solucao</th>
      <th>Descrição Módulo </th>
      <th width ="10">Det</th>
      <th width ="10">Edit</th>
      <th width ="10">Del</th>
    </tr>
  </thead>
  <tbody>
    <% for solucao_modulo in @solucao_modulos %>
      <tr>
        <td><%=h solucao_modulo.solucao_descricao %></td>
        <td><%=h solucao_modulo.modulo_descricao %></td>
        <td><%= link_to image_tag(image_link[:show]), [:admin,solucao_modulo] %></td>
        <td><%= link_to image_tag(image_link[:edit]), edit_admin_solucao_modulo_path(solucao_modulo) %></td>
        <td><%= link_to image_tag(image_link[:del]), [:admin, solucao_modulo], 
                      :confirm => 'Confirma Exclusão?', :method => :delete %></td>
      </tr>
    <% end %>
  <tbody>
</table>

<p>
  <li class ="links">
    <%= link_to 'Novo Módulo',new_admin_solucao_modulo_path,:class => 'new' %>
  </li>
</p>
