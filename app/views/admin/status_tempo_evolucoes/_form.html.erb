<%= semantic_form_for [:admin,:status,@status_tempo_evolucao], remote:true do |form| %>
  <%= form.inputs do %>
    <%= section_tag do %>
      <%= form.input :tipo_pendencia,
                     :collection => @tipo_pendencias.collect{|p|[p.descricao,p.id]},
                     :label      => 'Tipo PendÃªncia',
                     :input_html => {autofocus:true,id:'tipo-pendencia'} %>

      <%= form.input :prioridade,
                     :collection => @prioridades.collect{|p|[p.descricao,p.id]},
                     :input_html => {id:'prioridade'}  %>

      <%= form.input :tempo_horas,
                     :input_html => {style:"width: 120px !important",id:'tempo-horas'} %>
      
      <% if @status_tempo_evolucao.new_record? %>
        <div class="check-label-container">
          <%= check_box_tag("continuar_cadastrando", 1, true)%>
          <%= label("", "Continuar Cadastrando") %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <%= form.actions :class => "buttons-container" do %>
    <%= submit_button form %>
    <%= link_to_cancel admin_status_index_path %>
  <% end %>

<% end %>
