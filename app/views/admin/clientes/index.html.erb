<% title "Listagem Clientes" %>
<table  border="0" cellpadding="0" cellspacing="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th width="100">Telefone</th>
      <th width="100">Fax</th>
      <th width="10">Cont</th>
      <th width="10">Det</th>
      <th width="10">Edit</th>
      <th width="10">Del</th>
    </tr>
  </thead>
    <tbody>
      <% for cliente in @clientes %>
        <tr>
          <td><%=h cliente.nome %></td>
          <td><%=h cliente.telefone %></td>
          <td><%=h cliente.fax %></td>
          <td><%= link_to image_tag(image_link[:new]), 
                  admin_cliente_contatos_path(:cliente => cliente,:local => :cliente_index) %></td>
          <td><%= link_to image_tag(image_link[:show]), [:admin, cliente] %></td>
          <td><%= link_to image_tag(image_link[:edit]), edit_admin_cliente_path(cliente) %></td>
          <td><%= link_to image_tag(image_link[:del]), [:admin,cliente], 
                    :confirm => 'Confirma ExclusÃ£o?', :method => :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= will_paginate @clientes, :id => 'paginate' %>
<p>
  <li class ="links">
    <%= link_to 'Novo Cliente',new_admin_cliente_path,:class => 'new' %>
  </li>
</p>
