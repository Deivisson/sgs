<%= semantic_form_for [:admin, @prioridade] do |form| %>
  <%= form.inputs do %>
    <%= section_tag :legend => "Informações da Prioridade" do %>
      <%= form.input :descricao,
                     :label       => "Descrição",
                     :input_html  => {:autofocus => true} %>
      
      <%= form.input :background_color,
                     :label       => "Cor de Fundo" %>
      
      <%= form.input :border_color,
                     :label       => "Cor de Borda" %>
      
      <%= form.input :font_color,
                     :label       => "Cor de fonte" %>

    <% end %>
  <% end %>

  <%= form.actions :class => "buttons-container" do %>
    <%= submit_button form %>
    <%= link_to_cancel admin_prioridades_path %>
  <% end %>
<% end %>
