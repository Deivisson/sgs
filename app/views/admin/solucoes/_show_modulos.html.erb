<table border ="0" cellspacing ="1" cellpadding = "0" style="width:99%;margin-left:12px;" >
  <caption>Módulos da Solução </caption>
  <thead>
    <tr>
      <th width ="40%">Descrição</th>
      <th>Total Pontos de Função do Módulo</th>
      <th>Previsão Total Treinamento do Módulo(hrs)</th>
      <th width ="10">Edit</th>
      <th width ="10">Del</th>
    </tr>
  </thead>
  <tbody>
    <% for solucao_modulo in @solucao_modulos %>
      <tr>
        <td>
          <%= link_to solucao_modulo.descricao,
            admin_solucao_modulo_path(:id => solucao_modulo.id ,
            :local => :solucao_show),class:'inline-link' %>
        </td>
        <td><%= solucao_modulo.peso_total %></td>
        <td><%= solucao_modulo.tempo_previsto_treinamento %></td>
        <td>
          <%= link_to image_tag(image_link[:edit]), 
              edit_admin_solucao_modulo_path(solucao_modulo,:local => :solucao_show) %></td>
                        
        <td>
          <%= link_to image_tag(image_link[:del]), admin_solucao_modulo_path, 
                        :confirm => 'Confirma Exclusão?', :method => :delete %></td>
      </tr>
    <% end %>
  <tbody>
</table>

